{
  "name": "@sigle/slate-to-markdown",
  "version": "0.4.0",
  "description": "This package converts a Slate 0.47 JSON representation to a Markdown document.",
  "main": "lib/index.js",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "license": "MIT",
  "scripts": {
    "prettier": "prettier --write '**/*.{json,md,js,ts,jsx,tsx,yml,css}'",
    "build": "tsc",
    "test": "jest",
    "release": "pnpm run build && pnpx changeset publish",
    "prepare": "husky install"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "src",
    "lib"
  ],
  "prettier": {
    "singleQuote": true
  },
  "lint-staged": {
    "*.{json,md,js,ts,jsx,tsx,yml,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "immutable": "4.0.0-rc.12",
    "remark-slate": "1.8.2",
    "slate": "0.47.9"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.2",
    "@changesets/cli": "2.19.0",
    "@types/jest": "27.4.0",
    "@types/node": "17.0.9",
    "@types/slate": "0.47.11",
    "husky": "7.0.4",
    "jest": "27.4.7",
    "lint-staged": "12.1.7",
    "prettier": "2.5.1",
    "ts-jest": "27.1.3",
    "typescript": "4.5.4"
  }
}
